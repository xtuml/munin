{
  "$schema": "/opt/masl/share/json/json-metaschema.json",
  "$version": "0.1.0",
  "$id": "audit_event_schema.json",
  "title": "Audit Event Definition",
  "description": "Defines a valid audit event",
  "type": "object",
  "properties": {
    "jobId": {
      "description": "ID of the enclosing job",
      "type": "string",
      "format": "uuid"
    },
    "jobName": {
      "description": "Name of the enclosing job definition",
      "type": "string"
    },
    "applicationName": {
      "description": "ID of the issuing application",
      "type": "string"
    },
    "eventType": {
      "description": "Name of the event type",
      "type": "string"
    },
    "eventId": {
      "description": "ID of the event instance",
      "type": "string",
      "format": "uuid"
    },
    "timestamp": {
      "description": "Event timestamp (ISO 8601 date-time string with no timezone offset)",
      "type": "string",
      "format": "date-time"
    },
    "previousEventIds": {
      "description": "ID(s) of any previous event(s)",
      "oneOf": [
        {
          "type": "string",
          "format": "uuid"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "minItems": 1
        }
      ]
    },
    "__comment__": true
  },
  "required": ["jobId", "jobName", "applicationName", "eventType", "eventId", "timestamp"],
  "additionalProperties": {
    "$ref": "#/$defs/event_data"
  },
  "$defs": {
    "event_data": {
      "oneOf": [
        {"$ref": "#/$defs/invariant"},
        {"$ref": "#/$defs/constraint"}
      ],
      "required": ["dataItemType", "value"]
    },
    "invariant": {
      "description": "TODO",
      "type": "object",
      "properties": {
        "dataItemType": {
          "enum": ["EXTRAJOBINV", "INTRAJOBINV"]
        },
        "value": {
          "type": "string"
        }
      }
    },
    "constraint": {
      "oneOf": [
        {"$ref": "#/$defs/branch_count"},
        {"$ref": "#/$defs/loop_count"}
      ]
    },
    "branch_count": {
      "description": "TODO",
      "type": "object",
      "properties": {
        "dataItemType": {
          "const": "BRANCHCOUNT"
        },
        "value": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "loop_count": {
      "description": "TODO",
      "type": "object",
      "properties": {
        "dataItemType": {
          "const": "LOOPCOUNT"
        },
        "value": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
